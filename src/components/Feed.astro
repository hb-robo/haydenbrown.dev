---
import { generateFeed } from '@astro/astro-feed';

const posts = await Astro.fetchContent('../../content/blog/*.md');
const feed = await generateFeed({
  title: 'Hayden T. Brown',
  description: 'Chronicling experiences with art, tech, and the world.',
  site: 'https://haydenbrown.dev',
  posts: posts.map((post) => ({
    title: post.title,
    description: post.description,
    link: Astro.url(post),
    date: post.pubDate,
  })),
});
---

<head>
  <link rel="alternate" type="application/atom+xml" title="Atom Feed" href="/feed.xml" />
</head>
